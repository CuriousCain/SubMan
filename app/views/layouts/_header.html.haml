%header.navbar-nav.navbar-fixed-top.navbar-inverse
  .container
    .navbar-brand
      = link_to "SubMan", root_path, id: "logo"
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Home",    root_path
        %li= link_to "Help",    help_path
        - if signed_in?
          %li= link_to "Users", '#'
          %li.dropdown
            %a.dropdown-toggle{:href => "#", "data-toggle" => "dropdown", "data-target" => "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_user
              %li= link_to "Settings", '#'
              %li.divider
              %li= link_to "Sign out", signout_path, method: "delete"
        - else
          %li= link_to "Sign in", signin_path 
